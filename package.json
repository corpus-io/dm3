{
    "private": true,
    "workspaces": [
        "packages/ens-mail-lib",
        "packages/ens-mail-backend",
        "packages/ens-mail-react"
    ],
    "devDependencies": {
        "eslint": "^8.17.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.0",
        "prettier": "^2.6.2"
    },
    "lint-staged": {
        "*.{js,ts,tsx,json}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "scripts": {
        "lint": "eslint '*/**/*.{js,ts,tsx}' --fix",
        "format": "prettier --write '*/**/*.{js,ts,tsx,json}'",
        "format:check": "prettier --check '*/**/*.{js,ts,tsx,json}'",
        "prepare": "husky install",
        "test": "./test-all.sh"
    }
}

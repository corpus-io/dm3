{
    "name": "ens-mail",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.15.4",
        "@metamask/detect-provider": "^1.2.0",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@testing-library/user-event": "^13.2.1",
        "@types/cors": "^2.8.12",
        "@types/jest": "^27.0.1",
        "@types/node": "^16.7.13",
        "@types/react": "^17.0.20",
        "@types/react-dom": "^17.0.9",
        "@types/uuid": "^8.3.4",
        "axios": "^0.25.0",
        "bootstrap": "^5.1.3",
        "buffer": "^6.0.3",
        "cors": "^2.8.5",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "ethers": "^5.5.4",
        "express": "^4.17.2",
        "husky": "^7.0.0",
        "jayson": "^3.6.6",
        "lint-staged": "^12.3.2",
        "nacl": "^0.1.3",
        "prettier": "^2.5.1",
        "react": "^17.0.2",
        "react-beforeunload": "^2.5.2",
        "react-chat-widget": "^3.1.4",
        "react-dom": "^17.0.2",
        "react-scripts": "5.0.0",
        "socket.io": "^4.4.1",
        "socket.io-client": "^4.4.1",
        "ts-node": "^10.4.0",
        "tweetnacl": "^1.0.3",
        "tweetnacl-util": "^0.15.1",
        "typescript": "^4.4.2",
        "uuid": "^8.3.2",
        "web-vitals": "^2.1.0"
    },
    "devDependencies": {
        "@types/react-beforeunload": "^2.1.1",
        "ts-json-schema-generator": "^0.98.0"
    },
    "scripts": {
        "start:dev": "react-scripts start",
        "start": " yarn ts-node --project test-backend/tsconfig.json test-backend/TestBackend.ts",
        "build:schema": "yarn ts-json-schema-generator -f tsconfig.json --path src/lib/Messaging.ts --type Message -o src/schema.json",
        "build": "react-scripts build && yarn build:schema",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint '*/**/*.{js,ts,tsx}' --fix",
        "format": "prettier --write '*/**/*.{js,ts,tsx,json}'",
        "format:check": "prettier --check '*/**/*.{js,ts,tsx,json}'",
        "prepare": "husky install"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "lint-staged": {
        "*.{js,ts,tsx,json}": [
            "prettier --write",
            "eslint --fix"
        ]
    }
}
